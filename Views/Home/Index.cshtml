@model User
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
    <div class="container">
        <h1>Bank Account</h1>
        <div class="registeration">
            <h3>Register here!</h3>
            <form asp-action="" asp-controller="makeUser" method="POST">

                <label asp-for="firstName">First Name:</label> 
                <span asp-validation-for="firstName"></span>
                <input class="form-control" type="text" asp-for="firstName">

                <label asp-for="lastName">Last Name:</label>
                <span asp-validation-for="lastName"></span>
                <input class="form-control" type="text" asp-for="lastName">

                <label asp-for="email">Email:</label>
                <span asp-validation-for="email"></span>
                <input class="form-control" type="text" asp-for="email">

                <label asp-for="password">Password:</label>
                <span asp-validation-for="password"></span>
                <input class="form-control" type="password" asp-for="password">

                <label asp-for="passwordConfirm">Confirm Password:</label>
                <span asp-validation-for="passwordConfirm"></span>
                <input class="form-control" type="password" asp-for="passwordConfirm">

                <button class="btn btn-primary mt-3" type="submit" name="registersubmit">Register!</button>
            </form>
            <div class="text-right">
                <a href="login">Already Registered?</a>
            </div>
        </div>

    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>